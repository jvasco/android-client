<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="RutgersBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="RutgersTheme" parent="RutgersBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/RutgersActionBar</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <!-- ActionBar styles -->
    <style name="RutgersActionBar"
        parent="@android:style/Widget.Holo.ActionBar">

        <item name="android:background">@color/pantone186</item>
        <item name="android:titleTextStyle">@style/RutgersActionBarTitleText</item>
    </style>

    <style name="RutgersActionBarTitleText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">

        <item name="android:textColor">@color/white</item>

    </style>

    <!-- Spinner style -->
    <style name="RutgersSpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/RutgersSpinnerText</item>
    </style>

    <style name="RutgersSpinnerDropdown" parent="@android:style/Widget.Holo.Light.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/RutgersSpinnerText</item>
    </style>

    <style name="RutgersSpinnerText" parent="@android:style/TextAppearance.Holo.Widget.DropDownItem">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Styles for table content displays -->
    <style name="RowHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
    </style>
    
    <style name="RowContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>
    
    <style name="RowContentText">
    	<item name="android:layout_gravity">left|top|fill_horizontal</item>
    	<item name="android:layout_width">0dp</item>
    	<item name="android:layout_weight">1</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    
    <style name="BasicDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>
    
</resources>
