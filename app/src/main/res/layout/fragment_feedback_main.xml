<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="edu.rutgers.css.Rutgers.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/feedback_select_subject"
	        android:textSize="16sp" />
	
	    <Spinner
	        android:id="@+id/subjectSpinner"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:entries="@array/feedback_subjects"
	        android:gravity="fill_horizontal"
	        android:spinnerMode="dropdown"
	        tools:listitem="@android:layout/simple_spinner_dropdown_item" />
	    
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/selectChannelLayout"
        android:visibility="gone" >
    
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/feedback_select_channel"
	        android:textSize="16sp" />
	
	    <Spinner
	        android:id="@+id/channelSpinner"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:entries="@array/feedback_channels"
	        android:gravity="fill_horizontal"
	        android:spinnerMode="dropdown"
	        tools:listitem="@android:layout/simple_spinner_dropdown_item" />
	    
    </LinearLayout>
    
    <CheckBox
        android:id="@+id/responseCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feedback_want_response" />

    <EditText
        android:id="@+id/messageEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/feedback_hint"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

</LinearLayout>