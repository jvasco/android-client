<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RutgersTheme" parent="RutgersTheme.Base" />
    <style name="ToolbarTheme" parent="ToolbarTheme.Base" />

    <style name="RutgersTheme.Base" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/actbar_new</item>
        <item name="colorPrimaryDark">@color/actbar_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RutgersTheme.Pref" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/RutgersTheme.ActionBarTheme</item>
    </style>

    <style name="RutgersTheme.ActionBarTheme" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/actbar_new</item>
        <item name="android:logo">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/RutgersTheme.TitleTextStyle</item>
        <item name="drawerArrowStyle">@style/WhiteHamburger</item>
    </style>

    <style name="RutgersTheme.TitleTextStyle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolbarTheme.Base" parent="RutgersTheme">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WhiteHamburger" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

