<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Main app theme -->
    <style name="RutgersActionBarTheme"
           parent="@android:style/Theme.Holo.Light.DarkActionBar">
   
        <item name="android:actionBarStyle">@style/RutgersActionBar</item>
        <item name="android:actionMenuTextColor">@color/white</item>
          
    </style>
    
    <!-- ActionBar styles -->
    <style name="RutgersActionBar" 
           parent="@android:style/Widget.Holo.ActionBar">
    
        <item name="android:background">@color/pantone186</item>
        <item name="android:titleTextStyle">@style/RutgersActionBarTitleText</item>
    
    </style>
    
    <style name="RutgersActionBarTitleText"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    
        <item name="android:textColor">@color/white</item>
        
    </style>
    
</resources>
