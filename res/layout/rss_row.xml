<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:columnCount="2" >

    <ImageView
        android:id="@+id/rssRowIconView"
        android:layout_width="79dp"
        android:layout_height="49dp"
        android:layout_column="0"
        android:layout_gravity="left|top|fill_horizontal"
        android:layout_row="1"
        android:layout_rowSpan="2"
       	android:contentDescription="article icon" />

    <TextView
        android:id="@+id/rssRowTitleView"
        android:layout_column="1"
        android:layout_gravity="left|top|fill_horizontal"
        android:layout_width="0dp"
        android:layout_row="1"
        android:text="Article Title"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/rssRowAuthorDateView"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:text="Author - Date"
        android:textAppearance="?android:attr/textAppearanceSmall" />

	<TextView
        android:id="@+id/rssRowDescView"
        android:layout_column="0"
        android:layout_width="0dp"
        android:layout_gravity="left|top|fill_horizontal"
        android:layout_row="3"
        android:layout_columnSpan="2"
        android:text="Description"
        android:textAppearance="?android:attr/textAppearanceSmall" />
</GridLayout>