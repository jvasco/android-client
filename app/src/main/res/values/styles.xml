    <style name="RutgersSpinnerTheme" parent="Widget.AppCompat.TextView.SpinnerItem">
    </style>

    <style name="RutgersTheme.TabLayoutTheme" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextAppearance">@style/RutgersTheme.TabLayoutTheme.TextAppearance</item>
    </style>

    <style name="RutgersTheme.TabLayoutTheme.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item>
