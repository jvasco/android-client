<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <!-- Address section -->
    <TableRow
		style="@style/RowHeader" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address_header"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </TableRow>

    <TableRow
        style="@style/RowContent" >

        <TextView
            android:id="@+id/addressTextView"
            style="@style/RowContentText" />
    </TableRow>

    <!-- Description Section -->
    <TableRow
		style="@style/RowHeader" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_header"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </TableRow>

    <TableRow
        style="@style/RowContent" >

        <TextView
            android:id="@+id/descriptionTextView"
            style="@style/RowContentText" />
    </TableRow>

    <!-- Nearby Buses section -->
    <TableRow
		style="@style/RowHeader" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nearby_bus_header"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </TableRow>

    <!-- Offices Section -->
    <TableRow
		style="@style/RowHeader" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/offices_header"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </TableRow>
    
    <TableRow
        style="@style/RowContent" >

        <TextView
            android:id="@+id/officesTextView"
            style="@style/RowContentText" />
    </TableRow>
    
    <!-- Building Number Section -->
    <TableRow
		style="@style/RowHeader" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/building_no_header"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </TableRow>

    <TableRow
        style="@style/RowContent" >

        <TextView
            android:id="@+id/buildingNoTextView"
            style="@style/RowContentText" />
    </TableRow>

    <!-- Campus Section -->
    <TableRow
		style="@style/RowHeader" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/campus_header"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </TableRow>

    <TableRow
        style="@style/RowContent" >

        <TextView
            android:id="@+id/campusTextView"
            style="@style/RowContentText" />
    </TableRow>

</TableLayout>